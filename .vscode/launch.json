{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Django",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/manage.py",
      "args": [
        "runserver",
        "--nothreading",
        "0.0.0.0:8000"
      ],
      "django": true,
      "justMyCode": false
    },
    {
      "name": "Python: Django Test",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/manage.py",
      "args": [
        "test",
        "--parallel"
      ],
      "django": true
    }
  ]
}